# Karakeep Configuration Template
# Copy to .env.karakeep and fill in actual values

# NextAuth Configuration
NEXTAUTH_SECRET=your_random_secret_minimum_32_chars_here
NEXTAUTH_URL=http://localhost:3000

# PostgreSQL Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_DB=karakeep

# Meilisearch
MEILI_MASTER_KEY=your_random_meilisearch_master_key_here

# Ollama for AI Tagging (uses local Ollama instance)
OLLAMA_BASE_URL=http://host.docker.internal:11434

# Optional: OpenAI API for advanced AI features
OPENAI_API_KEY=your_openai_key_if_using
